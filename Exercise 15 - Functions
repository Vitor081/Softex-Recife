def calculadora(n1, n2, operacao):
    if operacao == '0':
        return 0
    elif operacao == '1':
        return n1+n2
    elif operacao == '2':
        return n1-n2
    elif operacao == '3':
        return n1*n2
    elif operacao == '4':
        return n1 / n2

while True:
    n1 = float(input("Digite o primeiro valor:"))
    n2 = float(input("Digite o segundo valor"))
    print("Escola qual tipo de operação deve ser feita...")
    print("Digite (1) pra SOMAR!\n Digite(2) pra SUBTRAIR!\n Digite (3) pra MULTIPLICAR!\n Digite (4) pra DIVIDIR!")
    operacao = str(input("Qual operação você deseja fazer?!"))
    print("O resultado da operação é:", calculadora(n1, n2, operacao))
